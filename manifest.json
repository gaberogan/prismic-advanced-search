{
    "manifest_version": 2,

    "name": "Prismic Advanced Search",
    "version": "1.0",
    "description": "The search feature Prisimic never gave us.",
    "icons": {
        "16": "src/img/get_started16.png",
        "32": "src/img/get_started32.png",
        "48": "src/img/get_started48.png",
        "128": "src/img/get_started128.png"
    },

    "content_scripts": [{
        "css": ["src/index.css"],
        "js": ["content_script.js"],
        "run_at": "document_idle",
        "matches": [
            "https://*.prismic.io/documents/working*"
        ]
    }],
    "permissions": [
        "https://*.prismic.io/documents/working*"
    ],
    "web_accessible_resources": [
        "*"
    ]
}